<thead>
  <tr>
    {{#each table.visibleColumnGroups as |column|}}
      {{lt-column column=column click=(action 'onColumnClick' column)}}
    {{/each}}
  </tr>
  <tr>
    {{#each table.visibleSubColumns as |column|}}
      {{lt-column column=column rowspan=1 click=(action 'onColumnClick' column)}}
    {{/each}}
  </tr>
</thead>
<tbody>
  {{#each rows as |row|}}
    {{lt-row columns=table.visibleColumns row=row canExpand=canExpand click=(action 'onRowClick' row)}}
    {{#if canExpand}}
      {{#if row.expanded}}
        <tr class="lt-row lt-expanded-row" colspan={{table.visibleColumns.length}}>
          {{component expandedRowComponent tagName="" row=row}}
        </tr>
      {{/if}}
    {{/if}}
  {{/each}}

  {{#if isLoading}}
    <tr class="lt-row lt-is-loading" colspan={{table.visibleColumns.length}}>
      {{component loadingComponent tagName=""}}
    </tr>
  {{else if hasNoData}}
    {{#if noDataComponent}}
      <tr class="lt-row lt-no-data" colspan={{table.visibleColumns.length}}>
        {{component noDataComponent tagName=""}}
      </tr>
    {{else}}
      {{noDataText}}
    {{/if}}
  {{/if}}
</tbody>
